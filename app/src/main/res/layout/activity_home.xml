<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.mukhter.qrpay.Home">


    <RelativeLayout
    android:layout_width="match_parent"
        android:background="@drawable/rectangle4"
        android:id="@+id/relative_lay1"
        android:layout_height="220dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N0"
            android:textColor="#fff"
            android:textSize="39sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:layout_marginStart="179dp"
            android:id="@+id/amount"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="WALLET"
            android:background="@drawable/square_bg"
            android:paddingLeft="18.5dp"
            android:paddingTop="4dp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif" />
        <Button
            android:layout_width="188dp"
            android:layout_height="41dp"
            android:layout_marginTop="23dp"
            android:text="Fund Wallet"
            android:layout_below="@id/amount"
            android:textSize="12sp"
            android:background="@drawable/rounded_button2"
            android:textColor="#fa5d59"
            android:layout_centerHorizontal="true"
            android:id="@+id/fundbtn"
            android:textAllCaps="false"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/relative_lay1"
    android:id="@+id/relative_lay2">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="376dp"
        android:layout_marginTop="28dp"
        card_view:cardCornerRadius="10dp"
        android:layout_height="90dp"
        android:layout_below="@+id/card_view2"
        android:layout_alignStart="@+id/card_view2">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_height="60dp" />




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_gravity="center"
        android:layout_width="376dp"
        card_view:cardCornerRadius="10dp"
        android:layout_height="90dp"
        android:layout_below="@+id/card_view"
        android:layout_alignStart="@+id/card_view"
        android:layout_marginTop="37dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_height="60dp" />




    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="376dp"
        android:layout_marginLeft="17dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="38dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_height="60dp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>


</RelativeLayout>
