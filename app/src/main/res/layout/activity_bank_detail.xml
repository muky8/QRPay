<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.mukhter.qrpay.BankDetail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#fc605c"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="55dp"
        android:gravity="center_horizontal"
        android:text="QR Pay"
        android:textStyle="normal|bold"
        android:id="@+id/textView2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="#333333"
        android:text="Enter Bank Details,\nFor Withdrawals"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/textView2"/>





    <EditText
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:id="@+id/accountno"
        android:background="@drawable/edittext_bottomline"
        android:textColor="#000"
        android:inputType="textPersonName"
        android:hint="Account Number"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="67dp" />
<Spinner
    android:layout_width="298dp"
    android:layout_height="40dp"
    android:layout_below="@id/accountno"
    android:layout_marginTop="70dp"
    android:layout_alignStart="@+id/textView3"
    android:id="@+id/spinner1"/>

    <Button
        android:layout_height="46dp"
        android:text="Next"
        android:background="@drawable/rounded_btn"
        android:id="@+id/next_btn"
        android:layout_width="298dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginStart="54dp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/spinner1"/>


</RelativeLayout>
