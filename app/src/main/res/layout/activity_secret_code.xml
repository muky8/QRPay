<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.mukhter.qrpay.SecretCode">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#fc605c"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="55dp"
        android:gravity="center_horizontal"
        android:text="QR Pay"
        android:textStyle="normal|bold"
        android:id="@+id/textView2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="#333333"
        android:text="Enter 4-Digit Secret\nCode"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/textView2"/>




    <com.github.irvingryan.VerifyCodeView
        android:id="@+id/verifcode"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:vcTextSize="4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:layout_marginTop="120dp"
        app:vcTextColor="#fc605c"/>


    <Button
        android:layout_height="46dp"
        android:text="Register"
        android:background="@drawable/rounded_btn"
        android:id="@+id/reg_btn"
        android:layout_width="298dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginStart="54dp"
        android:layout_marginTop="90dp"
        android:layout_below="@id/verifcode"/>

</RelativeLayout>
